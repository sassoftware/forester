class Forester(BuildPackageRecipe):
    name = 'forester'
    version = '0.1.0'

    buildRequires = [
        'python-devel',
        'python-setuptools',
        'mercurial',
        'git',
        'python-requests',
        ]

    def setup(r):
        r.macros.major = '.'.join(r.version.replace('_', '.').split('.')[:2]) 
        env = 'VERSION=%(version)s MAJOR=%(major)s'
        r.addMercurialSnapshot()
        r.Make(env)
        r.MakeInstall(env)

